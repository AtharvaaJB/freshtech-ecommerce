mixin reviewCard(rev)
    - const user = rev.user
    .reviews__card
        .reviews__avatar
            img.reviews__avatar-img(src=`/img/users/${user.photo}`, alt= user.name)
            h6.reviews__user= user.name
        p.reviews__text= rev.review
        .reviews__rating
            - const stars = [1, 2, 3, 4, 5]
            each star in stars
                svg.reviews__star(class=`reviews__star--${rev.rating >= star ? 'active' : 'inactive'}`)
                    use(xlink:href='/img/icons.svg#icon-star')